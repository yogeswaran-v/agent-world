
FROM node:18-alpine

# Install Python 3 and pip for debugging
RUN apk add --no-cache python3 py3-pip

WORKDIR /app

# Install dependencies
COPY package.json ./
RUN npm install

# Copy application code
COPY . .

# Expose Next.js port
EXPOSE 3000

# Start in development mode instead of trying to build
CMD ["npm", "run", "dev"]